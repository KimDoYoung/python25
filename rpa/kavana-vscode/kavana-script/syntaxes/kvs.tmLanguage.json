{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "kavana",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
				"name": "keyword.control.kvs",
				"match": "\\b(main|end_main|function|end_function|if|end_if|elif|else|while|end_while|for|to|in|step|end_for|return|continue|break)\\b"
				},
				{
				"name": "keyword.command.kvs",
				"match": "\\b(include|load_env|print|set)\\b"
				}
		]
		},
		"strings": {
			"name": "string.quoted.double.kvs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.kvs",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.kvs"
}